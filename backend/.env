# ======================
# AWS Configuration
# ======================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# DynamoDB Tables
DYNAMODBTABLE=ChildResilienceIncidents
SHELTER_TABLE=ChildResilienceShelters

# Storage & Messaging
S3BUCKET=childresilience-agent-files
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:ChildResilienceAlerts
EVENTBRIDGE_BUS_NAME=ChildResilienceBus

# ======================
# JWT Authentication
# ======================
JWT_SECRET=change-me-super-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120

# ======================
# Twilio Configuration
# ======================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_SMS_FROM=+1234567890
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# ======================
# Email / SMTP Configuration
# ======================
SMTP_HOST=smtp.yourmailserver.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=ChildResilience-Agent <alerts@childresilience.org>

# ======================
# AI / LLM Integrations (Optional)
# ======================
OPENAI_API_KEY=your_openai_api_key
BEDROCK_API_KEY=your_bedrock_api_key

# ======================
# App Settings
# ======================
DEBUG=True
DEFAULT_LANGUAGE=en
