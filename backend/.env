# ======================
# AWS Configuration
# ======================
AWSREGION=us-east-1
DYNAMODBTABLE=ChildResilienceIncidents
S3BUCKET=childresilience-agent-files
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:ChildResilienceAlerts
EVENTBRIDGE_BUS_NAME=ChildResilienceBus

# ======================
# Twilio Configuration
# ======================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_SMS_FROM=+1234567890
TWILIO_WHATSAPP_FROM=whatsapp:+1234567890

# ======================
# Email / SMTP Configuration
# ======================
SMTP_HOST=smtp.yourmailserver.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=alerts@childresilience.org

# ======================
# LLM / AI Configuration
# ======================
OPENAI_API_KEY=your_openai_api_key  # Optional if using OpenAI
BEDROCK_API_KEY=your_bedrock_api_key  # Optional if using AWS Bedrock

# ======================
# App Settings
# ======================
DEBUG=True
DEFAULT_LANGUAGE=en
